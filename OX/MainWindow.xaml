<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="OX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OX"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label x:Name="StatusLabel" Content="Tura: Oczekiwanie na serwer" FontSize="24" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <Grid x:Name="GameGrid" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="Cell_0_0" Grid.Row="0" Grid.Column="0" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_0_1" Grid.Row="0" Grid.Column="1" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_0_2" Grid.Row="0" Grid.Column="2" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_1_0" Grid.Row="1" Grid.Column="0" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_1_1" Grid.Row="1" Grid.Column="1" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_1_2" Grid.Row="1" Grid.Column="2" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_2_0" Grid.Row="2" Grid.Column="0" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_2_1" Grid.Row="2" Grid.Column="1" FontSize="32" Click="OnCellClicked"/>
                <Button x:Name="Cell_2_2" Grid.Row="2" Grid.Column="2" FontSize="32" Click="OnCellClicked"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
